
<form id="form" name="form" action="/deposit">
    <h1>{{title}}</h1>

    <p>Bem vindo to Internet Banking</p>

    <h3>Seu saldo: <span id="spanBalance">{{accountBalance}}</span></h3>

    <input type="number" id="depositValue" name="depositValue" />
    <button type="button" onclick="deposit($(this))">Fazer depósito</button><br><br><br>

    <input type="number" id="saqueValue" name="saqueValue" />
    <button type="button" onclick="saque($(this))">Fazer saque</button>
</form>

<script>
    function deposit (button) {
        var depositValue = document.getElementById("depositValue").value;

        if (!depositValue || depositValue < 0) {
            alert("O valor de depóstio deve ser maior que zero");
            return false;
        }

        $.ajax({
            url: '/deposit',
            type: 'GET',
            data: jQuery($('#form')).serialize(),
            contentType: false,
            processData: false,
            success: function (data) {
                $("#depositValue").val("");
                $("#spanBalance").text(data.newAccountBallance); 
                alert(data.message);
            },
            error: function (data) {
                $("#depositValue").val("");
                alert(data);
            }
        })
    }

    function saque (button) {
        var saqueValue = document.getElementById("saqueValue").value;

        if (!saqueValue || saqueValue < 0) {
            alert("O valor de depóstio deve ser maior que zero");
            return false;
        }

        $.ajax({
            url: '/saque',
            type: 'GET',
            data: jQuery($('#form')).serialize(),
            contentType: false,
            processData: false,
            success: function (data) {
                $("#saqueValue").val("");
                $("#spanBalance").text(data.newAccountBallance); 
                alert(data.message);
            },
            error: function (data) {
                $("#saqueValue").val("");
                alert(data);
            }
        })
    }
</script>